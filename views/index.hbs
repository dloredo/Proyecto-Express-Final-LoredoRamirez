    <!-- Modal agregar productos -->
    <div class="modal fade" id="agregarProductosCliente" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Generar nota</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <form action="/agregarProductos-notas" method="post" id="agregarProductos">
                    <input type="hidden" name="id_cliente" id="id_cliente"> 
                    <input type="hidden" name="id_nota" id="id_nota"> 
                    <div class="form-group">
                        <label for="nombre">Producto</label>
                        <select name="producto" id="producto" class="form-control">
                            {{#each productos}}
                                <option value="{{this.id}}">{{this.nombre}} ${{this.precio}}</option>
                            {{/each}}
                        </select>
                    </div> 
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" onclick="document.getElementById('agregarProductos').submit()">Agregar venta</button>
            </div>
            </div>
        </div>
